<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MOBILUX.Pages.PasswordUserRecoveryPage"
             BackgroundColor="{StaticResource Brown50}">

	<Grid>
		<!-- Background image -->
		<Image Source="loginbackground.png"
               Aspect="AspectFill"
               Opacity="0.95" />

		<!-- Overlay -->
		<BoxView Color="{StaticResource Brown50}"
                 Opacity="0.70" />

		<ScrollView>
			<Grid Padding="24"
                  RowDefinitions="Auto,Auto,Auto"
                  RowSpacing="16">

				<!-- Top logo -->
				<Image Grid.Row="0"
                       Source="loadinglogo.png"
                       WidthRequest="300"
                       HeightRequest="300"
                       HorizontalOptions="Center"
                       Margin="0,10,0,0" />

				<!-- Title -->
				<Label Grid.Row="1"
                       Text="Recover password"
                       Style="{StaticResource TitleLabel}"
                       HorizontalTextAlignment="Center" />

				<!-- Card -->
				<Border Grid.Row="2"
                        StrokeThickness="0"
                        BackgroundColor="{StaticResource Brown100}"
                        Padding="18"
                        HorizontalOptions="Center"
                        MaximumWidthRequest="720"
                        StrokeShape="RoundRectangle 18">

					<VerticalStackLayout Spacing="12">

						<Label Text="Digite su correo electrónico"
                               Style="{StaticResource FieldLabel}" />

						<Entry x:Name="RecoverEmailEntry"
                               Placeholder="correo@ejemplo.com"
                               Keyboard="Email"
                               Style="{StaticResource InputEntry}"
                               TextChanged="OnRecoverEmailChanged" />

						<!-- Auto message -->
						<Border x:Name="EmailSentBubble"
                                IsVisible="False"
                                StrokeThickness="0"
                                BackgroundColor="{StaticResource Brown50}"
                                Padding="12"
                                StrokeShape="RoundRectangle 14">
							<Label Text="Le ha llegado un correo con un código."
                                   Style="{StaticResource BodyLabel}" />
						</Border>

						<Label Text="Código" Style="{StaticResource FieldLabel}" />
						<Entry x:Name="CodeEntry"
                               Placeholder="Digite el código"
                               Keyboard="Text"
                               Style="{StaticResource InputEntry}" />

						<Label Text="Nueva contraseña" Style="{StaticResource FieldLabel}" />
						<Entry x:Name="NewPasswordEntry"
                               Placeholder="Digite su nueva contraseña"
                               IsPassword="True"
                               Style="{StaticResource InputEntry}" />

						<!-- Password recommendation bubble -->
						<Border StrokeThickness="0"
                                BackgroundColor="{StaticResource Brown50}"
                                Padding="12"
                                StrokeShape="RoundRectangle 14">
							<Label Text="Recomendación: la contraseña debe tener mínimo 8 caracteres y máximo 16. Debe contener al menos una letra mayúscula, un número y un caracter especial."
                                   Style="{StaticResource BodyLabel}" />
						</Border>

						<Label Text="Confirmar contraseña" Style="{StaticResource FieldLabel}" />
						<Entry x:Name="ConfirmNewPasswordEntry"
                               Placeholder="Confirme su nueva contraseña"
                               IsPassword="True"
                               Style="{StaticResource InputEntry}" />

						<Button Text="Guardar"
                                Style="{StaticResource PrimaryButton}"
                                Margin="0,10,0,0"
                                Clicked="OnSaveClicked" />

					</VerticalStackLayout>
				</Border>

			</Grid>
		</ScrollView>
	</Grid>
</ContentPage>
