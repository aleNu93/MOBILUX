<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MOBILUX.Pages.LoadingPage"
    BackgroundColor="{StaticResource Brown50}">

    <Grid Padding="24">
        <VerticalStackLayout
            Spacing="0"
            HorizontalOptions="Center"
            VerticalOptions="Center">
            
            <Image Source="loadinglogo.png"
                   x:Name="LoadingImage"
                   Aspect="AspectFit"
                   WidthRequest="{OnIdiom Phone=260, Tablet=320, Desktop=360}"
                   HeightRequest="{OnIdiom Phone=260, Tablet=320, Desktop=360}"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />

            <Label x:Name="LoadingLabel"
                   Text="Loading..."
                   FontSize="30"
                   TextColor="{StaticResource Brown700}"
                   HorizontalTextAlignment="Center"
                   Margin="0,8,0,0"
                   Opacity="0.9" />

        </VerticalStackLayout>
    </Grid>

</ContentPage>
