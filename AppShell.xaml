<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:pages="clr-namespace:MOBILUX.Pages"
       x:Class="MOBILUX.AppShell"
       FlyoutBehavior="Disabled">

    <ShellContent Route="loading"
                  ContentTemplate="{DataTemplate pages:LoadingPage}" />

    <ShellContent Route="login"
                  ContentTemplate="{DataTemplate pages:LoginPage}" />

    <ShellContent Route="dashboard"
                  ContentTemplate="{DataTemplate pages:DashboardPage}" />

</Shell>
